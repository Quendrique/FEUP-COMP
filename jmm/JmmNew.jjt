options {
 LOOKAHEAD=2;
 MULTI=true;
 DEBUG_PARSER=false;
}
PARSER_BEGIN(JmmNew)
import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class JmmNew{

  static int errorCount=0;

 public static void main(String args[]) throws ParseException {

    final String FILENAME = args[0];

    BufferedReader br = null;
    FileReader fr = null;

    try {
        fr = new FileReader(FILENAME);
        br = new BufferedReader(fr);

    } catch (IOException e) {
        e.printStackTrace();
    }

    JmmNew myJmmNew = new JmmNew(br);
    SimpleNode root = myJmmNew.Program();
    root.dump("");

 }
    
}
PARSER_END(JmmNew)
SKIP :
{
    " " | "\r" | "\t" | "\n" 
}

SKIP :
{
  "/*" : multilinecomment
}

SKIP :
{
  "//" : singlelinecomment
}

< multilinecomment >
SKIP :
{
  "*/" : DEFAULT
| < ~[ ] >
}

< singlelinecomment >
SKIP :
{
  < [ "\n", "\r" ] > : DEFAULT
| < ~[ ] >
}


TOKEN:
{
    < CLASS: "class">
    | < EXTENDS: "extends" >
    | < PUBLIC: "public">
    | < STATIC: "static">
    | < VOID: "void">
    | < MAIN: "main">
    | < IF: "if">
    | < ELSE: "else">
    | < WHILE: "while">
    | < RETURN: "return">
    | < OB: "{" >
    | < CB: "}" >
    | < OSQB: "[" >
    | < CSQB: "]" >
    | < OPRNT: "(">
    | < CPRNT: ")">
    | < CM: ",">
    | < PNT: ".">
    | < SCM: ";" >
    | < EQLS: "=">
    | < NOT: "!">
    | < AND: "&&">
    | < LS: "<">
    | < PLS: "+">
    | < MNS: "-">
    | < SLSH: "/">
    | < ASTRSK: "*">
    | < INT: "int" >
    | < BOOLEAN: "boolean" >
    | < STRING: "String">
    | < TRUE: "true">
    | < FALSE: "flase">
    | < THIS: "this">
    | < NEW: "new">
    | < LENGTH: "length">
    | < IDENTIFIER: (["A"-"Z","a"-"z","_"](["0"-"9","A"-"Z","a"-"z","_"])*)>
    | < INTEGERLITERAL: (["0"-"9"])+>
}

SimpleNode Program(): {}
{
    ClassDeclaration() {return jjtThis;} <EOF>
}

void ClassDeclaration(): {Token t;}
{
    <CLASS> t=<IDENTIFIER> (<EXTENDS> <IDENTIFIER>)? <OB> 
        (VarDeclaration())*  
        
        
        (MainDeclaration() | MethodDeclaration())*
    <CB>
    {jjtThis.setName(t.image);}
}

void VarDeclaration(): {Token t;}
{
    Type() t=<IDENTIFIER> {jjtThis.setIdentifier(t.image);} <SCM>
}

void MainDeclaration(): {Token t;}
{
    <PUBLIC> <STATIC> <VOID> <MAIN> <OPRNT> <STRING> <OSQB> <CSQB> t = <IDENTIFIER> <CPRNT> <OB>
        (VarDeclaration())*
        (Statement())*
    <CB>
    {jjtThis.setIdentifier(t.image);}
}

void MethodDeclaration(): {Token t;}
{
    <PUBLIC> Type() t=<IDENTIFIER> <OPRNT> 
    (
        (
            MethodArgument()
            (
            <CM> MethodArgument()
            )* 
        ) #MethodArguments
    )* 
    <CPRNT>
    <OB>
        (VarDeclaration())*
        (Statement())*
        <RETURN> Expression() <SCM> #Return(1)
    <CB>
    {jjtThis.setName(t.image);}
}

void MethodArgument(): {Token t;}
{
  Type() t = <IDENTIFIER> {jjtThis.setIdentifier(t.image);} #Identifier
}

//LOOKAHEAD 2
void Type(): {Token t;}
{
    (
        t=<INT> <OSQB> <CSQB>
        | t=<BOOLEAN>  
        | t=<INT> 
        | t=<IDENTIFIER>  
    )
    {jjtThis.setType(t.image);}
}

//LOOKAHEAD 2
void Statement(): {Token t;}
{
    <OB>
        (Statement())*
    <CB>
    |
    <IF> <OPRNT> Expression() <CPRNT> Statement() <ELSE> Statement() 
    |
    While()
    |
    t=<IDENTIFIER> {jjtThis.setIdentifier(t.image);} #Identifier <EQLS> Expression() <SCM>
    |
    t=<IDENTIFIER> {jjtThis.setIdentifier(t.image);} #Identifier <OSQB> Expression() <CSQB> <EQLS> Expression() <SCM>
    |
    Expression() <SCM>
    
}

void While() #void: {}
{
  <WHILE> <OPRNT>
    try {
        Expression() <CPRNT>
    } 
    catch(ParseException e) {
      System.out.println(e.getMessage());
      JmmNew.errorCount++;
      Token t;

      if(JmmNew.errorCount>10){
          System.out.println(JmmNew.errorCount + " erros: exiting program");
          System.exit(1);
        }

      do {
        t = getNextToken();
      } while (t.kind != CPRNT);
    }
    Statement() 
}

//LOOKAHEAD 2
void Expression() : {}
{
  And()
}

void And() #void: {}
{
  Lt() (<AND> Lt() #And(2))*
}

void Lt() #void: {}
{
  AddSub() (<LS> AddSub() #LessThan(2))*
}

void AddSub() #void: {Token t;}
{
  MultDiv() (( t=<PLS>  | t=<MNS> ) MultDiv() {jjtThis.setOp(t.image);} #AddSub(2))* 
}

void MultDiv() #void: {Token t;}
{
  Literal() (( t=<ASTRSK> | t=<SLSH> ) Literal() {jjtThis.setOp(t.image);} #MultDiv(2))*
}

void Literal() #void: {Token t;}
{
  t = <INTEGERLITERAL> LiteralNR() {jjtThis.setValue(Integer.parseInt(t.image));} #IntegerLiteral
  |
  <TRUE> LiteralNR() 
  |
  <FALSE> LiteralNR() 
  |
  t = <IDENTIFIER> {jjtThis.setIdentifier(t.image);} #Identifier LiteralNR()
  |
  <THIS> LiteralNR()
  |
  <NEW> <INT> <OSQB> Expression() <CSQB> LiteralNR()
  |
  <NEW> <IDENTIFIER> <OPRNT> <CPRNT> LiteralNR()
  |
  <NOT> Expression() LiteralNR()
  |
  <OPRNT> Expression() <CPRNT> LiteralNR()
}

void LiteralNR() #void: {Token t;}
{
  <OSQB> Literal() <CSQB> LiteralNR()
  |
  <PNT> <LENGTH> LiteralNR()
  |
  <PNT> t=<IDENTIFIER> {jjtThis.setValue(t.image);} #Call <OPRNT> 
  (Args())* 
  <CPRNT> LiteralNR()
  |
  {}
}

void Args() : {}
{
    Expression() (<CM> Expression())*
}